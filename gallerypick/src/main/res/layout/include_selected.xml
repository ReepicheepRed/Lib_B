<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_36_c"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_92px"
        android:background="@color/gray_f5_c"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_30px"
        android:paddingRight="@dimen/margin_30px">

        <TextView
            android:id="@+id/tvFinish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/selected_count"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_30px" />

        <TextView
            android:id="@+id/is_next_tv"
            android:layout_width="@dimen/height_124px"
            android:layout_height="@dimen/height_52px"
            android:background="@drawable/ic_next_bg"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_30px" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/is_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_214px"
        android:paddingLeft="@dimen/margin_30px"
        android:scrollbars="horizontal"
        tools:listitem="@layout/item_selected" />

</LinearLayout>